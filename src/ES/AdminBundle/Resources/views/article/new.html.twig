{% extends "ESAdminBundle::layout.html.twig" %}
{% block title %} Articles {% endblock %}

{% block pagetitle %}
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Articles </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="{{ path('es_admin_homepage') }}">Tableau de bord</a></li>
                    <li class="breadcrumb-item active">Réglages généraux</li>
                </ol>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    {{ form_start(form, {'attr': { 'role' : 'form' }}) }}

    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}
<div class="col-md-12">
    <div class="card">
        <div class="card-body">
            <div class="form-group">
                <label>Titre</label>
                {{ form_widget(form.titre, {'attr': {'class': 'form-control' }}) }}
            </div>

            <div class="form-group">
                <label>Catégorie</label>
                {{ form_widget(form.category, {'attr': {'class': 'form-control' }}) }}
            </div>
            <div class="form-group">
                <label>Extrait</label>
                {{ form_widget(form.extrait, {'attr': {'class': 'form-control' }}) }}
            </div>
            <div class="form-group">
                <label>Contenu</label>
                {{ form_widget(form.contenu, {'attr': {'class': 'form-control' }}) }}
            </div>
            <div class="form-group">
                <label>Image mise en avant</label>
                {{ form_widget(form.imageFile, {'attr': {'class': 'file' }}) }}
            </div>
            <div class="form-check">
                {{ form_widget(form.isEnable, {'attr': {'class': 'form-check-input' }}) }}
                <label class="form-check-label" for="exampleInputEmail1">Publié ?</label>
            </div>
        </div>

    </div>
</div>
    {{ form_rest(form) }}

    {# Fermeture de la balise <form> du formulaire HTML #}
    {{ form_end(form) }}
{% endblock %}