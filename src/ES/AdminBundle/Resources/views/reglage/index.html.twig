{% extends "ESAdminBundle::layout.html.twig" %}
{% block title %} Reglage Général {% endblock %}

{% block pagetitle %}
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Réglages généraux </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="{{ path('es_admin_homepage') }}">Tableau de bord</a></li>
                    <li class="breadcrumb-item active">Réglages généraux</li>
                </ol>
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
    <div class="col-md-12">
        <div class="card">

            {{ form_start(form, {'attr': { 'role' : 'form' }}) }}

            {# Les erreurs générales du formulaire. #}
            {{ form_errors(form) }}
            <div class="card-body">
               <div class="col-md-6">
                   <div class="form-group">
                       <label for="exampleInputEmail1">Titre du site</label>
                       {{ form_widget(form.siteTitle, {'attr': {'class': 'form-control' }}) }}
                   </div>
                   <div class="form-group">
                       <label for="exampleInputEmail1">Slogan</label>
                       {{ form_widget(form.slogan, {'attr': {'class': 'form-control' }}) }}
                   </div>
                   <div class="form-group">
                       <label for="exampleInputEmail1">Adresse Email</label>
                       {{ form_widget(form.email, {'attr': {'class': 'form-control' }}) }}
                   </div>
                   <div class="form-group">
                       <label for="exampleInputEmail1">Téléphone</label>
                       {{ form_widget(form.phone, {'attr': {'class': 'form-control' }}) }}
                   </div>
                   <div class="form-group">
                       <label for="exampleInputEmail1">Logo</label>
                       {{ form_widget(form.logoFile, {'attr': {'class': 'file' }}) }}
                       <img src="{{ asset(vich_uploader_asset(reglages, 'logoFile')) }}" alt="{{ reglages.siteTitle }}" />
                   </div>
               </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Enregistrer</button>

            </div>
            {{ form_rest(form) }}

            {# Fermeture de la balise <form> du formulaire HTML #}
            {{ form_end(form) }}
        </div>
    </div>


{% endblock %}

{% block pagejs %}
{% endblock %}

{% block scripts %}

{% endblock %}